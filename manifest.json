{
    "manifest_version": 2,
    "name": "Testing popup for ClipBoard Manager",
    "version": "1.0",
    "icons": {
        "48": "icons/cbmng-48.png"
    },
    "permissions": [
        "activeTab",
        "tabs",
        "contextMenus",
        "storage"
    ],
    "background": {
        "scripts": [
            "background/background.js"
        ]
    },
     "content_scripts": [
         {
             "matches": [
                 "<all_urls>"
             ],
             "js": [
                 "content.js"
             ],
             "run_at": "document_idle",
             "all_frames": true
         }
     ],
    "browser_action": {
        "default_icon": "icons/cbmng-32.png",
        "default_title": "Testing",
        "default_popup": "popup/cbmngPopup.html"
    },
    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+Y"
            }
        },
        "execute_copy_to_clipboard": {
            "suggested_key": {
                "default": "Ctrl+Shift+U"
            }
        }
    }
}